{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
